application multiStateAlarm

# Declaring bricks
sensor button: 7
actuator led: 8
actuator buzzer: 2

# Declaring states

onone {
    led <= LOW
	buzzer <= HIGH
    button is HIGH => ontwo
}

ontwo {
    led <= HIGH
	buzzer <= LOW
    button is HIGH => off
}

-> off {
    led <= LOW
	buzzer <= LOW
    button is HIGH => onone
}
