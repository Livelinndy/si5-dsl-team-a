application signalingStuffByUsingSounds

# Declaring bricks
sensor button: 7
actuator led: 8
actuator buzzer: 2

# Declaring states

on {
	buzzer longbeep 1
	buzzer shortbeep 3
    led <= LOW
	buzzer <= HIGH
    button is HIGH => off
}

-> off {
    led <= LOW
	buzzer <= LOW
    button is HIGH => on
}
